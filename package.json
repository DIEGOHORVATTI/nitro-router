{
  "name": "nitro-router",
  "type": "commonjs",
  "description": "A TypeScript-first Express.js router with automatic validation, typed middleware, and OpenAPI documentation generation",
  "license": "MIT",
  "version": "0.3.3",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "express",
    "router",
    "typescript",
    "validation",
    "zod",
    "openapi",
    "swagger",
    "middleware",
    "type-safe"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DIEGOHORVATTI/nitro-router.git"
  },
  "bugs": {
    "url": "https://github.com/DIEGOHORVATTI/nitro-router/issues"
  },
  "homepage": "https://github.com/DIEGOHORVATTI/nitro-router#readme",
  "author": "Diego Horvatti",
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0",
    "zod": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/multer": "2.0.0",
    "@types/node": "24.2.0",
    "@types/swagger-ui-express": "4.1.8",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "cors": "2.8.5",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-promise": "7.2.1",
    "express": "5.1.0",
    "express-rate-limit": "8.0.1",
    "helmet": "8.1.0",
    "morgan": "1.10.1",
    "multer": "2.0.2",
    "server": "1.0.42",
    "serverless-http": "3.2.0",
    "typescript": "5.9.2",
    "zod": "4.0.15"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "8.1.0",
    "swagger-ui-express": "5.0.1",
    "@scalar/api-reference": "1.34.2",
    "http-status-codes": "^2.3.0"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "rm -rf dist && npm run build",
    "prepublishOnly": "npm run build:clean",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
